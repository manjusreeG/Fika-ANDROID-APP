<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/categorieImage"
        android:layout_width="124dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:left="17dp"
        android:radius="10dp"
        android:top="531dp"
        app:srcCompat="@drawable/bruschetta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/categorieTitle"
            android:layout_width="189dp"
            android:layout_height="36dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="Bruschetta"
            android:textColor="@color/fikaColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/categorieDesc"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="17dp"
            android:overScrollMode="ifContentScrolls"
            android:text="Sliced homemade baguette brushed with extra-virgin olive oil and toasted in the oven , topped with tomatoes, garlic, basil, extra-virgin olive oil and aged balsamic"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>